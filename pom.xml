<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://maven.apache.org/POM/4.0.0"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <artifactId>WorldFuscator</artifactId>
  <packaging>pom</packaging>
  <version>0.3.0-SNAPSHOT</version>

  <modules>
    <module>Core</module>
    <module>WorldGuard-7</module>
    <module>WarGear</module>
  </modules>

  <properties>
    <!-- HACK: Overwrite parents projectversion with our own -->
    <projectVersion>${project.version}</projectVersion>
  </properties>

  <parent>
    <artifactId>MyPlayPlanet</artifactId>
    <groupId>net.myplayplanet</groupId>
    <version>1.0.0-SNAPSHOT</version>
  </parent>

  <repositories>
    <repository>
      <id>pp-public</id>
      <url>https://nexus.myplayplanet.net/repository/public/</url>
    </repository>
  </repositories>

  <dependencies>
    <dependency>
      <groupId>com.destroystokyo.paper</groupId>
      <artifactId>paper-api</artifactId>
      <version>1.13.2-R0.1-SNAPSHOT</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>net.myplayplanet</groupId>
      <artifactId>BlockGenerator</artifactId>
      <version>0.1.4-SNAPSHOT</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>com.comphenix.protocol</groupId>
      <artifactId>ProtocolLib-API</artifactId>
      <version>4.4.0</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>com.sk89q.worldguard</groupId>
      <artifactId>worldguard-core</artifactId>
      <version>7.0.0-SNAPSHOT</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>com.sk89q</groupId>
      <artifactId>worldguard-api</artifactId>
      <version>7.0.0</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>com.boydti</groupId>
      <artifactId>fawe-api</artifactId>
      <version>latest</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <groupId>com.plotsquared</groupId>
          <artifactId>plotsquared-api</artifactId>
        </exclusion>
        <exclusion>
          <groupId>net.fabiozumbi12</groupId>
          <artifactId>redprotect</artifactId>
        </exclusion>
        <exclusion>
          <groupId>org.primesoft</groupId>
          <artifactId>BlocksHub</artifactId>
        </exclusion>
      </exclusions>
    </dependency>

    <dependency>
      <groupId>net.myplayplanet</groupId>
      <artifactId>Regionslibrary</artifactId>
      <version>0.1.4-SNAPSHOT</version>
      <scope>compile</scope>
    </dependency>
  </dependencies>
</project>
